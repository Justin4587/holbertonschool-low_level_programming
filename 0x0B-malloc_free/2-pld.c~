#include "holberton.h"

char *str_concat(char *s1, char *s2)
{
int count1;
int count2;
 int i;
 int j;
 char *dup;

 if (s1 == NULL)
   s1 = "";
 if (s2 == NULL)
   s2 = "";

 while (s1[count1] != '\0')
   count1++;
 while (s2[count2] != '\0')
   count2++;

 dup = malloc(sizeof(char) * (count1 + count2 + 1));

   if (dup == NULL)
     return (NULL);

 for (i = 0; s1[i] != '\0'; i++)
   dup[i] = s1[i];

 for (j = 0; s2[j] != '\0'; j++)
   dup[j + i] = s2[j];

 dup[j + i] = '\0';
 return (dup);
}


